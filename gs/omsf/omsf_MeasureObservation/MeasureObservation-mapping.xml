<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
    <namespaces>
        <Namespace>
            <prefix>omsf</prefix>
            <uri>http://www.opengis.net/omsf/1.0</uri>
        </Namespace>
        <Namespace>
            <prefix>gml</prefix>
            <uri>http://www.opengis.net/gml/3.2</uri>
        </Namespace>
        <Namespace>
            <prefix>gmlsf</prefix>
            <uri>http://www.opengis.net/gmlsf/2.0</uri>
        </Namespace>
        <Namespace>
            <prefix>xlink</prefix>
            <uri>http://www.w3.org/1999/xlink</uri>
        </Namespace>
    </namespaces>
    <sourceDataStores>
        <DataStore>
            <id>postgres</id>
            <parameters>
                <Parameter>
                    <name>schema</name>
                    <value>public</value>
                </Parameter>
                <Parameter>
                    <name>database</name>
                    <value>measurements</value>
                </Parameter>
                <Parameter>
                    <name>host</name>
                    <value>postgres</value>
                </Parameter>
                <Parameter>
                    <name>port</name>
                    <value>5432</value>
                </Parameter>
                <Parameter>
                    <name>passwd</name>
                    <value>oursecret</value>
                </Parameter>
                <Parameter>
                    <name>dbtype</name>
                    <value>postgis</value>
                </Parameter>
                <Parameter>
                    <name>user</name>
                    <value>postgres</value>
                </Parameter>
            </parameters>
        </DataStore>
    </sourceDataStores>
    <catalog>catalog.xml</catalog>
    <targetTypes>
        <FeatureType>
            <schemaUri>http://www.opengis.net/omsf/1.0</schemaUri>
        </FeatureType>
    </targetTypes>
    <typeMappings>
        <FeatureTypeMapping>
            <sourceDataStore>postgres</sourceDataStore>
            <sourceType>MeasureObservation</sourceType>
            <targetElement>omsf:MeasureObservation</targetElement>
            <isDenormalised>false</isDenormalised>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>gml:identifier</targetAttribute>
                    <sourceExpression>
                        <OCQL>identifier</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>codeSpace</name>
                        <value>'vaisala:observation-identifier'</value>
                    </ClientProperty>
                </AttributeMapping>

                <AttributeMapping>
                    <targetAttribute>omsf:observedProperty</targetAttribute>
                    <ClientProperty>
                        <name>xlink:href</name>
                        <value>'todo:link-to-source-metadata'</value>
                    </ClientProperty>
                </AttributeMapping>

                <AttributeMapping>
                    <targetAttribute>gml:identifier</targetAttribute>
                    <sourceExpression>
                        <OCQL>identifier</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                
                <AttributeMapping>
                    <targetAttribute>omsf:phenomenonTime</targetAttribute>
                    <sourceExpression>
                        <OCQL>phenomenonTime</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                
                <AttributeMapping>
                    <targetAttribute>omsf:resultTime</targetAttribute>
                    <sourceExpression>
                        <OCQL>resultTime</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                
                <AttributeMapping>
                    <targetAttribute>omsf:foiName</targetAttribute>
                    <sourceExpression>
                        <OCQL>foiName</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                
                <AttributeMapping>
                    <targetAttribute>omsf:result</targetAttribute>
                    <sourceExpression>
                        <OCQL>result</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>uom</name>
                        <value>result_uom</value>
                    </ClientProperty>
                </AttributeMapping>
                
                <AttributeMapping>
                    <targetAttribute>omsf:foiGeometry</targetAttribute>
                    <idExpression>
                        <OCQL>strConcat('shape.', getId())</OCQL>
                    </idExpression>
                    <sourceExpression>
                        <OCQL>foiGeometry</OCQL>
                    </sourceExpression>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>
    </typeMappings>
</as:AppSchemaDataAccess>
